rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Usuários podem ler e escrever nos seus próprios documentos de usuário
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Usuários podem ler e escrever nos seus próprios documentos de progresso
    match /progresso/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Adicione outras regras de coleção aqui
  }
}
